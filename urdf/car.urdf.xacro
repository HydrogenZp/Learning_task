<?xml version="1.0" ?>
<robot name="mycar" xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:property name="radius" value="0.1"/>
    <xacro:property name="PI" value="3.14159265"/>

    <link name="base_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.8 0.4 0.2" />
            </geometry>
        </visual>
        <collision>
                    <origin xyz="0 0 0" rpy="0 0 0"/>
                    <geometry>
                        <box size="0.8 0.4 0.2" />
                    </geometry>
        </collision>
    </link>
    <joint name="left_front_wheel_joint" type="continuous">
        <origin xyz="0.25 0.28 0" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <axis xyz="0 1 0"/>
    </joint>
    <link name="left_front_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="1.5707963 0.0 0.0"/>
            <geometry>
                <cylinder length="0.1" radius="0.18"/>
                <origin rpy="1.5707963 0.0 0.0"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.015 0.015 0"/>
            <geometry>
                <cylinder length="0.1" radius="0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="right_front_wheel_joint" type="continuous">
        <origin xyz="0.25 -0.28 0" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <axis xyz="0 1 0"/>
    </joint>
    <link name="right_front_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="1.5707963 0.0 0.0"/>
            <geometry>
                <cylinder length="0.1" radius="0.18"/>
                <origin rpy="1.5707963 0.0 0.0"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.015 0.015 0"/>
            <geometry>
                <cylinder length="0.1" radius="0.1"/>
            </geometry>
        </collision>
    </link>
    <joint name="right_back_wheel_joint" type="continuous">
        <origin xyz="-0.25 -0.28 0" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="right_back_wheel"/>
        <axis xyz="0 1 0"/>
    </joint>
    <link name="right_back_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="1.5707963 0.0 0.0"/>
            <geometry>
                <cylinder length="0.1" radius="0.18"/>
                <origin rpy="1.5707963 0.0 0.0"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.015 0.015 0"/>
            <geometry>
                <cylinder length="0.1" radius="0.1"/>
            </geometry>
        </collision>
    </link>
    <joint name="left_back_wheel_joint" type="continuous">
        <origin xyz="-0.25 0.28 0" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="left_back_wheel"/>
        <axis xyz="0 1 0"/>
    </joint>
    <link name="left_back_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="1.5707963 0.0 0.0"/>
            <geometry>
                <cylinder length="0.1" radius="0.18"/>
                <origin rpy="1.5707963 0.0 0.0"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.015 0.015 0"/>
            <geometry>
                <cylinder length="0.1" radius="0.1"/>
            </geometry>
        </collision>
    </link>
</robot>

